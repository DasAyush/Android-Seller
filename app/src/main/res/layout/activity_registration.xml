<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yashladha.android_seller.LoginActivity"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvEmail"
        android:text="Email or Phone"
        android:textSize="10dp"
        android:textColor="#887f7f"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:orientation="horizontal">
        <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etEmail"
        android:padding="5dp"
        android:layout_weight="0.9"
        android:hint="Email or Phone Number"
        android:textColorHint="#887f7f"
        android:layout_marginLeft="10dp"
        style="@style/Widget.AppCompat.EditText"
        android:background="@drawable/button_border"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:id="@+id/btCheckEmail"
            android:text="Check Email"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvPassword"
        android:text="Password"
        android:textSize="10dp"
        android:textColor="#887f7f"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginBottom="15dp">
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etPassword"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColorHint="#887f7f"
            android:layout_weight="1"
            android:background="@drawable/button_border"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:padding="10dp"
            android:src="@drawable/ic_eye"
            android:id="@+id/ibPassword"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Trial Services"
            android:gravity="left"
            android:paddingTop="10dp"
            android:textSize="18dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/tvTrial"/>

        <CheckBox
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:id="@+id/chTrial"
            android:layout_marginLeft="20dp"/>

    </LinearLayout>
    <Button
        android:id ="@+id/btLogin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textColor="#fff"
        android:enabled="false"
        android:text="Register"
        android:layout_gravity="center"
        android:background="@drawable/button_rounded_corners_gradiant"
        android:padding="15dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/tvLogin"
        android:text="Have an account login here"
        android:textColor="#45be3d"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="10dp"
        android:text="or register by"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="0.5"
            android:text="Facebook"
            android:textColor="#fff"
            android:layout_margin="20dp"
            android:textAllCaps="false"
            android:backgroundTint="#2867a5"
            android:background="@drawable/button_rounded_corners_gradiant"
            android:padding="20dp"
            android:id="@+id/btFacebook"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="0.5"
            android:textAllCaps="false"
            android:text="Google+"
            android:textColor="#fff"
            android:layout_margin="20dp"
            android:backgroundTint="#a52137"
            android:background="@drawable/button_rounded_corners_gradiant"
            android:padding="20dp"
            android:id="@+id/btGoogle"/>
    </LinearLayout>
</LinearLayout>
